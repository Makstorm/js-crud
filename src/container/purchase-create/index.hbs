{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
<main class="main">
    {{#with data}}
       <form method="POST" action='/purchase-submit?id={{id}}' class="form-card">
            {{> heading title="Ваше замовлення"}}

            <ul class="cart">
                {{#each cart}}
                    <li class="cart__item">
                        <span>{{text}}</span>
                        <span>{{price}} грн</span>
                    </li>
                {{/each}}
            </ul>

            {{> divider }}

            {{> heading  title="Оформлення замовлення" }}

            {{> field label="Імʼя" name="firstname"}}

            {{> field label="Прізвище" name="lastname"}}

            {{> field label="Телефон" name="phone"}}

            {{> field label="Пошта" name="email"}}

            {{> field label="Коментар" name="comment"}}
            
            {{> field label="Списати бонуси" name="bonus"}}
            
            {{> field label="Промокод" name="promocode"}}

            {{> field name='totalPrice' value=totalPrice disabled=true}}
            {{> field name='productPrice' value=productPrice disabled=true}}
            {{> field name='deliveryPrice' value=deliveryPrice disabled=true}}
            {{> field name='amount' value=amount disabled=true}}

            <strong class="form-card__total">
                Всього: {{totalPrice}} грн ({{bonus}} грн.)
            </strong>

            {{> button text='Оформити замовлення'}}
       </form>
    {{/with}}
</main>
{{! 
    Цей код містить лише те, що буде виводитись в <body>
    Адже наш layout/default.hbs має вже структуру HTML
}}