{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}
{{#with user}}
  <div class='form'>
    <h1 class='form__title'>Змінити користувача</h1>
    <form method='post' action='/user-update'>
      <div class='form__content'>
        <div class='form__field'>
          <label for='id' class='form__label'>Email адресса</label>
          <input
            type='id'
            name='id'
            class='form__input'
            value='{{id}}'
          />
        </div>
        <div class='form__field'>
          <label for='email' class='form__label'>Email
            адресса</label>
          <input
            type='email'
            name='email'
            class='form__input'
            value='{{email}}'
          />
        </div>
        <div class='form__field'>
          <label
            for='login'
            class='form__label'
          >Нікнейм</label>
          <input
            type='login'
            name='login'
            class='form__input'
            value='{{login}}'
          />
        </div>
        <div class='form__field'>
          <label
            for='password'
            class='form__label'
          >Пароль</label>
          <input
            type='password'
            name='password'
            class='form__input'
          />
        </div>
        <button class='form__button'>Змінити</button>
      </div>
    </form>
  </div>
{{/with}}

